---
import MainLayout from "../layouts/MainLayout.astro";
import Malou from "../components/Malou.astro";
import Formaal from "../components/Formaal.astro";
import Kompetencer from "../components/Kompetencer.astro";
import Erfaring from "../components/Erfaring.astro";
import Kontakt from "../components/Kontakt.astro";
---

<MainLayout title="Digital Ansøgning">
  <!-- Hero / Video-sektion -->
  <section class="relative">
    <div class="sticky top-0 z-10 bg-primary">
      <video
        src="/video/kornmark.mp4"
        autoplay
        loop
        muted
        playsinline
        class="w-full lg:h-[75vh] object-cover"
      >
      </video>
    </div>
    <!-- Plads til at videoen kan være sticky -->
    <div class="h-[25vh]"></div>
  </section>

  <!-- Sideindhold -->
  <Malou />
  <Formaal />
  <Kompetencer />
  <Erfaring />
  <Kontakt />
</MainLayout>
